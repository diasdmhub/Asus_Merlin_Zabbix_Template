        <trigger>
            <expression>{Asus Router:vm.memory.size[available].min(5m)}&lt;={$MEMORY.AVAILABLE.MIN} and {Asus Router:vm.memory.size[total].last()}&gt;0</expression>
            <recovery_mode>RECOVERY_EXPRESSION</recovery_mode>
            <recovery_expression>{Asus Router:vm.memory.size[available].min(5m)}&gt;={$MEMORY.AVAILABLE.MIN} and {Asus Router:vm.memory.size[total].last()}&gt;0</recovery_expression>
            <name>Lack of available memory ( &lt; {$MEMORY.AVAILABLE.MIN} of {ITEM.VALUE2})</name>
            <opdata>Available: {ITEM.LASTVALUE1}, total: {ITEM.LASTVALUE2}</opdata>
            <priority>AVERAGE</priority>
        </trigger>
        <trigger>
            <expression>{Asus Router:system.cpu.load[all,avg1].min(5m)}/{Asus Router:system.cpu.num.last()}&gt;{$LOAD_AVG_PER_CPU.MAX.WARN}&#13;
and {Asus Router:system.cpu.load[all,avg5].last()}&gt;0&#13;
and {Asus Router:system.cpu.load[all,avg15].last()}&gt;0</expression>
